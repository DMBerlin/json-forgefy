{
  "name": "json-forgefy",
  "version": "2.0.1",
  "description": "Creates a new JSON Object, based on a blueprint object with params.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "prepublishOnly": "pnpm run build",
    "pretest": "eslint . --fix && prettier --write ./src/**/*.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && prettier \"{src,apps,libs,test}/**/*.ts\" --write",
    "prepush": "pnpm run test",
    "precommit": "lint-staged",
    "prepare": "husky",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "release": "release-please release-pr --token=$GITHUB_TOKEN",
    "release:create": "release-please release-pr --token=$GITHUB_TOKEN",
    "release:tag": "release-please release-pr --token=$GITHUB_TOKEN --create-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DMBerlin/json-forgefy.git"
  },
  "keywords": [
    "typescript",
    "json",
    "npm-package"
  ],
  "author": "Daniel Marinho",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DMBerlin/json-forgefy/issues"
  },
  "homepage": "https://github.com/DMBerlin/json-forgefy#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "release-please": "^17.1.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/",
      "/__mocks__/",
      "/__tests__/",
      "/interfaces/",
      "/types/",
      "/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@fixtures/(.*)$": "<rootDir>/src/__fixtures__/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@core/(.*)$": "<rootDir>/src/core/$1",
      "^@helpers/(.*)$": "<rootDir>/src/helpers/$1",
      "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
      "^@operators/(.*)$": "<rootDir>/src/operators/$1",
      "^@lib-types/(.*)$": "<rootDir>/src/types/$1"
    }
  }
}